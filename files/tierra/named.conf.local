// Zona directa
zone "sistema.sol" {
     type master;
     file "/var/lib/bind/sistema.sol.dns";
     allow-transfer { 192.168.57.102; };
     notify yes;
};

// Zona inversa
zone "57.168.192.in-addr.arpa" {
     type master;
     file "/var/lib/bind/sol.192.168.57";
};
